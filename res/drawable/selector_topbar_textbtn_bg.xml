<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <solid android:color="@color/blue_dark" />

            <corners android:radius="@dimen/top_bar_textbtn_corner" />
        </shape></item>
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false"><shape>
            <solid android:color="@color/blue_normal" />

            <corners android:radius="@dimen/top_bar_textbtn_corner" />
        </shape></item>
    <item android:state_enabled="true" android:state_focused="true"><shape>
            <solid android:color="@color/blue_dark" />

            <corners android:radius="@dimen/top_bar_textbtn_corner" />
        </shape></item>
    <item android:state_enabled="true" android:state_pressed="true"><shape>
            <solid android:color="@color/blue_dark" />

            <corners android:radius="@dimen/top_bar_textbtn_corner" />
        </shape></item>
    <item android:drawable="@color/transparent"><shape>
            <solid android:color="@color/blue_normal" />

            <corners android:radius="@dimen/top_bar_textbtn_corner" />
        </shape></item>

</selector>