<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="@color/switch_checked" />

            <corners android:radius="@dimen/switch_radius" />

            <size android:height="@dimen/switch_height" />
        </shape></item>
    <item android:state_checked="false"><shape android:shape="rectangle">
            <solid android:color="@color/switch_unchecked" />

            <corners android:radius="@dimen/switch_radius" />

            <size android:height="@dimen/switch_height" />
        </shape></item>

</selector>