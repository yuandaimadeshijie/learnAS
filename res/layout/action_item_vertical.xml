<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/action_item_btn"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical" >
	<LinearLayout
        android:id="@+id/tv_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/topbar_create_multi_chat_divide_margin_left"
        android:layout_marginRight="@dimen/topbar_create_multi_chat_divide_margin_left"
        android:background="@color/topbar_create_multi_chat_divide" 
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/topbar_create_multi_chat_icon_padding_top"
            android:paddingLeft="@dimen/topbar_create_multi_chat_icon_padding_left"
            android:paddingRight="@dimen/topbar_create_multi_chat_icon_padding_left"
            android:paddingTop="@dimen/topbar_create_multi_chat_icon_padding_top" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/topbar_create_multi_chat_length"
                android:layout_height="@dimen/topbar_create_multi_chat_length"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/create_long_multi_chat" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/topbar_create_multi_chat_text_margin_right"
            android:gravity="center_vertical"
            android:text="发起群聊"
            android:textColor="@color/topbar_create_multi_chat_text"
            android:textSize="@dimen/topbar_create_multi_chat_text_size" />
    </LinearLayout>

    

</LinearLayout>