<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_d" >
    </LinearLayout>

    <TextView
        android:id="@+id/search_result_module_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/search_module_text_margin_bottom"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="@dimen/search_module_text_margin_top"
        android:gravity="center|left"
        android:text="@string/search_roster_text"
        android:textColor="@color/search_module_text"
        android:textSize="@dimen/search_module_text" />

</LinearLayout>