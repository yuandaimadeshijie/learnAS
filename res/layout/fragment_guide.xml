<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_splash_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="110dp"
        android:layout_height="99dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/shape_guide_circle_1" />

    <View
        android:layout_width="130dp"
        android:layout_height="124dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/shape_guide_circle_2" />

    <View
        android:layout_width="103dp"
        android:layout_height="101dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/shape_guide_circle_3" />

    <View
        android:layout_width="130dp"
        android:layout_height="124dp"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_guide_circle_4" />

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:persistentDrawingCache="animation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:id="@+id/guide_dots"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:divider="@color/transparent"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal" >
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>