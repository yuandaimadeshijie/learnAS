<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:focusable="false" >

        <LinearLayout
            android:id="@+id/main_tabitem_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/main_tabwidget_image_margin"
            android:layout_marginRight="@dimen/main_tabwidget_image_margin"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_tabitem_icon"
                android:layout_width="@dimen/main_tabwidget_image_size"
                android:layout_height="@dimen/main_tabwidget_image_size"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:paddingTop="@dimen/main_tabwidget_image_padding"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/main_tabitem_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/main_tabitem_text"
                android:textSize="@dimen/main_tabitem" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tabitem_viewhl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/main_tabwidget_image_margin"
            android:layout_marginRight="@dimen/main_tabwidget_image_margin"
            android:alpha="0"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_tabitem_iconhl"
                android:layout_width="@dimen/main_tabwidget_image_size"
                android:layout_height="@dimen/main_tabwidget_image_size"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:paddingTop="@dimen/main_tabwidget_image_padding"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/main_tabitem_texthl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="@color/main_tabitem_text_hl"
                android:textSize="@dimen/main_tabitem" />
        </LinearLayout>

        <TextView
            android:id="@+id/main_tabitem_redpoint"
            android:layout_width="@dimen/main_tabwidget_redpoint_size"
            android:layout_height="@dimen/main_tabwidget_redpoint_size"
            android:layout_gravity="right|top"
            android:layout_marginRight="@dimen/main_tabwidget_redpoint_margin_top"
            android:layout_marginTop="@dimen/main_tabwidget_redpoint_margin_top"
            android:background="@drawable/shape_news_count"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/list_unread_count"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>