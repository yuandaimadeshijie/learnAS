<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dip"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.yonyou.sns.im.ui.emoji.view.CustomViewPager
        android:id="@+id/parent_pager"
        android:layout_width="match_parent"
        android:layout_height="160.0dip"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/emoji_advanced_gray"
        android:orientation="horizontal" >

        <com.yonyou.sns.im.ui.emoji.view.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            app:pstsIndicatorColor="@color/emoji_indicator_color"
            app:pstsIndicatorHeight="2dp"
            app:pstsShouldExpand="true"
            app:pstsTabPaddingLeftRight="2dp"
            app:pstsUnderlineColor="@color/transparent"
            app:pstsDividerColor="@color/transparent" />

        <ImageButton
            android:id="@+id/back_space"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@color/emoji_advanced_gray"
            android:contentDescription="@null"
            android:src="@drawable/emoji_delete"
            android:scaleType="centerInside"/>
    </LinearLayout>

</LinearLayout>