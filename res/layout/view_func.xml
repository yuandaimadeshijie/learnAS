<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/func_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/func_separator" />

    <LinearLayout
        android:id="@+id/func_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/func_height"
        android:background="@drawable/selector_func_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/func_icon"
            android:layout_width="@dimen/func_icon_size"
            android:layout_height="@dimen/func_icon_size"
            android:layout_marginLeft="@dimen/func_horizontal_margin"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/func_name"
            android:layout_width="@dimen/func_name_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/func_horizontal_margin"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/func_name"
            android:textSize="@dimen/func_name" />

        <LinearLayout
            android:id="@+id/func_custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/func_right"
            android:layout_width="@dimen/func_right_arrow_size"
            android:layout_height="@dimen/func_right_arrow_size"
            android:layout_marginLeft="@dimen/func_right_padding"
            android:layout_marginRight="@dimen/func_horizontal_margin"
            android:contentDescription="@null"
            android:duplicateParentState="true"
            android:src="@drawable/selector_arrow_right" />
    </LinearLayout>

</LinearLayout>