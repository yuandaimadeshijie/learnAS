<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center">
                <EditText 
                android:id="@+id/search_result_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_hint"
                android:textColorHint="@color/white"
                android:textSize="@dimen/search_topbar_edit_hint_size"
                android:textColor="@color/white"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:background="@drawable/shape_search_edit_bg"
                android:paddingLeft="@dimen/search_topbar_edit_padding_left"
                android:paddingRight="@dimen/search_topbar_edit_padding_right"
                android:layout_marginTop="@dimen/search_topbar_edit_margin"
                android:layout_marginBottom="@dimen/search_topbar_edit_margin"/>
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/search_result_edit_delete"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/search_topbar_edit_delete_margin_right"
                android:visibility="gone">
                <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_deleted"
                android:background="@null"
                android:contentDescription="@null"/>
            </LinearLayout>
</RelativeLayout>
