<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/view_simple_topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/me_bg"
        android:fillViewport="false"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/setting_msg_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/me_vertical_margin"
                android:background="@color/me_border"
                android:orientation="vertical"
                android:paddingBottom="1px"
                android:paddingTop="1px" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:clickable="false"
                    android:focusable="false" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_horizontal_margin"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/setting_mutemode"
                        android:textColor="@color/setting_item"
                        android:textSize="@dimen/setting_item" />

                    <Switch
                        android:id="@+id/setting_mutemode"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/setting_switch_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/setting_horizontal_margin"
                        android:switchMinWidth="@dimen/switch_mini_width"
                        android:textOff=""
                        android:textOn=""
                        android:thumb="@drawable/shape_switch_inner"
                        android:thumbTextPadding="@dimen/switch_text_padding"
                        android:track="@drawable/selector_switch_bg" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/me_separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:clickable="false"
                    android:focusable="false" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_horizontal_margin"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/setting_vibration"
                        android:textColor="@color/setting_item"
                        android:textSize="@dimen/setting_item" />

                    <Switch
                        android:id="@+id/setting_vibration"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/setting_switch_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/setting_horizontal_margin"
                        android:switchMinWidth="@dimen/switch_mini_width"
                        android:textOff=""
                        android:textOn=""
                        android:thumb="@drawable/shape_switch_inner"
                        android:thumbTextPadding="@dimen/switch_text_padding"
                        android:track="@drawable/selector_switch_bg" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/me_separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:clickable="false"
                    android:focusable="false" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_horizontal_margin"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/setting_led"
                        android:textColor="@color/setting_item"
                        android:textSize="@dimen/setting_item" />

                    <Switch
                        android:id="@+id/setting_remind"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/setting_switch_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/setting_horizontal_margin"
                        android:switchMinWidth="@dimen/switch_mini_width"
                        android:textOff=""
                        android:textOn=""
                        android:thumb="@drawable/shape_switch_inner"
                        android:thumbTextPadding="@dimen/switch_text_padding"
                        android:track="@drawable/selector_switch_bg" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/me_separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:clickable="false"
                    android:focusable="false" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_horizontal_margin"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/setting_preview"
                        android:textColor="@color/setting_item"
                        android:textSize="@dimen/setting_item" />

                    <Switch
                        android:id="@+id/setting_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/setting_switch_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/setting_horizontal_margin"
                        android:switchMinWidth="@dimen/switch_mini_width"
                        android:textOff=""
                        android:textOn=""
                        android:thumb="@drawable/shape_switch_inner"
                        android:thumbTextPadding="@dimen/switch_text_padding"
                        android:track="@drawable/selector_switch_bg" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_btn_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/me_vertical_margin"
                android:background="@color/me_border"
                android:orientation="vertical"
                android:paddingBottom="1px"
                android:paddingTop="1px" >

                <!--
                <RelativeLayout
                    android:id="@+id/setting_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@drawable/selector_me_item_bg"
                    android:clickable="true"
                    android:focusable="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_horizontal_margin"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/setting_feedback"
                        android:textColor="@color/setting_item"
                        android:textSize="@dimen/setting_item" />

                    <ImageView
                        android:layout_width="@dimen/me_func_right_size"
                        android:layout_height="@dimen/me_func_right_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/me_horizontal_margin"
                        android:contentDescription="@null"
                        android:duplicateParentState="true"
                        android:src="@drawable/common_arrow_right_selector" />
                </RelativeLayout>


                -->

                <RelativeLayout
                    android:id="@+id/setting_about"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@drawable/selector_func_bg"
                    android:clickable="true"
                    android:focusable="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_horizontal_margin"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/setting_about"
                        android:textColor="@color/setting_item"
                        android:textSize="@dimen/setting_item" />

                    <ImageView
                        android:layout_width="@dimen/me_account_right_size"
                        android:layout_height="@dimen/me_account_right_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/me_horizontal_margin"
                        android:contentDescription="@null"
                        android:duplicateParentState="true"
                        android:src="@drawable/selector_arrow_right" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_exit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/me_vertical_margin"
                android:background="@color/me_border"
                android:orientation="vertical"
                android:paddingBottom="1px"
                android:paddingTop="1px" >

                <Button
                    android:id="@+id/setting_exit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@drawable/selector_func_bg"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/setting_horizontal_margin"
                    android:text="@string/setting_exit"
                    android:textColor="@color/setting_item"
                    android:textSize="@dimen/setting_item" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>